#menu.on_landing_page
{
  margin-top: 10px;
}

#logo
{
  height: 94px;
  margin-top: 60px;
  width: 404px;
}

#marketing_statement
{
  font: normal 24px "Noteworthy Light";
  margin: 20px auto;
  text-align: center;
  width: 800px;
}

#main_features
{
  background: url(<%= image_path "main_features_line.png" %>) no-repeat bottom;
  font: normal 30px "Noteworthy Light";
  height: 50px;
  margin-top: 60px;
  padding-bottom: 5px;
  text-align: center;
  width: 938px;
}

.feature
{
  float: left;
  margin: 40px 0 0 160px;
  width: 260px;
}

.feature_title
{
  font-size: 14px;
  margin-bottom: 5px;
  text-align: center;
}

.feature_image
{
  background: #e9e9e9;
  border: 4px solid #fff;
  height: 160px;
  width: 260px;
}

.feature_description
{
  height: 50px;
  margin-top: 10px;
  text-align: center;
  width: 260px;
}

.feature_description p
{
  padding: 0 10px;
}

.try_it_container
{
  margin: 65px auto 0 auto;
  text-align: center;
}

.try_it_container a
{
  background: url(<%= asset_path "bg_try_it_button.png" %>) repeat-x #5b9e13;
  border-radius: 5px;
  border: 4px solid #d7d6d6;
  color: #fff;
  font: 36px "Noteworthy Light";
  height: 8px;
  padding: 5px 20px 10px 20px;
}

.try_it_container a:hover
{
  color: #f3f3f3;
}