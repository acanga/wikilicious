#marketing_statement
{
  height: auto;
  margin: 20px auto;
  width: 800px;
}

#marketing_statement p
{
  font-family: "Noteworthy Light";
  font-size: 24px;
  text-align: center;
}

#main_features
{
  background: url(<%= image_path "main_features_line.png" %>) no-repeat bottom;
  color: #0d683c;
  font-family: "Noteworthy Light";
  font-size: 30px;
  height: 50px;
  margin-top: 60px;
  padding-bottom: 5px;
  text-align: center;
  width: 938px;
}

.feature
{
  float: left;
  height: auto;
  margin: 40px 0 0 160px;
  width: 260px;
}

.feature_title
{
  font-size: 14px;
  margin-bottom: 5px;
  text-align: center;
}

.feature_image
{
  background: #e9e9e9;
  border: 4px solid #fff;
  height: 160px;
  width: 260px;
}

.feature_description
{
  height: 50px;
  margin-top: 10px;
  text-align: center;
  width: 260px;
}

.feature_description p
{
  padding: 0 10px;
}