.box
{
  background: url(<%= asset_path "box.png" %>);
  height: 359px;
  margin: 100px auto 0 auto;
  padding: 20px 50px;
  position: relative;
  width: 257px;
}

.box .box_header_image
{
  float: left;
  height: 44px;
  margin: 0 10px 0 20px;
  width: 48px;
}

.box h2
{
  color: #16ad65;
  font: 30px "Noteworthy Light";
  margin: 0 auto;
  text-align: center;
  width: 100px;
}

.fields
{
  margin-top: 27px;
}

.fields label
{
  display: block;
  font-size: 14px;
  margin-bottom: 2px;
}

.fields input
{
  border-radius: 5px;
  border: 1px solid #969697;
  font-size: 15px;
  height: 30px;
  padding: 0 5px;
  width: 240px;
}

.links
{
  bottom: 15px;
  position: absolute;
}

.links a
{
  color: #fff;
  display: block;
  font-size: 13px;
  padding-top: 5px;
}

.links a:hover
{
  color: #0b5230;
}

.actions input
{
  border-radius: 5px;
  border: 1px solid #969697;
  bottom: 15px;
  color: #0b5230;
  float: right;
  font-family: "Noteworthy Light";
  font-size: 16px;
  height: 35px;
  padding-bottom: 4px;
  position: absolute;
  right: 50px;
  width: 95px;
}