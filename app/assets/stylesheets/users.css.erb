.box
{
  background: url(<%= asset_path "box.png" %>);
  height: 359px;
  margin: 100px auto 0 auto;
  padding: 20px 50px;
  position: relative;
  width: 257px;
}

.box_header_image
{
  float: left;
  height: 44px;
  margin: 0 10px 0 20px;
  width: 48px;
}

.box h2
{
  color: #16ad65;
  font: 30px "Noteworthy Light";
  margin: 0 auto;
  text-align: center;
  width: 100px;
}

.links
{
  bottom: 15px;
  position: absolute;
}

.links a
{
  color: #fff;
  display: block;
  font-size: 13px;
  padding-top: 5px;
}

.links a:hover
{
  color: #0b5230;
}