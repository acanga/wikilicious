.box
{
  background: url(<%= asset_path "box.png" %>);
  height: 359px;
  margin: 100px auto 0 auto;
  padding: 20px 50px;
  position: relative;
  width: 257px;
}

.box_header_image
{
  float: left;
  height: 44px;
  margin: 0 10px 0 56px;
  width: 48px;
}

.box h2
{
  color: #16ad65;
  font: 30px "Noteworthy Light";
  margin: 0 auto;
}

.links
{
  bottom: 15px;
  position: absolute;
}

.links a
{
  color: #fff;
  display: block;
  font-size: 13px;
  padding-top: 5px;
}

.links a:hover
{
  color: #0b5230;
}

.large.box
{
  background: url(<%= asset_path "large_box.png" %>) no-repeat;
  width: 327px;
}

.large.box img
{
  margin: 0 0 0 5px;
}

.large.box h2
{
  padding-left: 56px;
  width: 280px;
}

.large.box p
{
  font-size: 14px;
  padding: 30px 0 0;
}