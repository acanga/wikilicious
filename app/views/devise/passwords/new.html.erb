<div class="large box">
  <%= image_tag "forgot_your_password.png", :class => :box_header_image %>

  <h2>Forgot your password?</h2>

  <p>
    Don't feel bad, it happens with everybody, and we're here to save you. Just tell us your email
    and we'll send you a link to reset your password.
  </p>

  <%= form_for(@user, :url => new_password_path, :html => { :method => :post }) do |f| %>
    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email %>
      <span class="field_error_message">
        <%= @user.errors[:email].to_sentence.capitalize %>
      </span>
    </div>

    <div class="links">
      <%= link_to "Sign up", sign_up_path %>
      <%= link_to "Login", sign_in_path %>
    </div>

    <div class="actions">
      <%= f.submit "Send me the email" %>
    </div>
  <% end %>
</div>