<div class="box">
  <%= image_tag "sign_up.png", :class => :box_header_image %>

  <h2>Sign up</h2>

  <%= form_for(@user, :url => sign_up_path) do |f| %>
    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email %>
      <span class="field_error_message">
        <%= @user.errors[:email].first.try(:capitalize) %>
      </span>
    </div>

    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password %>
      <span class="field_error_message">
        <%= @user.errors[:password].first.try(:capitalize) %>
      </span>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
      <span class="field_error_message">
        <%= @user.errors[:password_confirmation].first.try(:capitalize) %>
      </span>
    </div>

    <div class="links">
      <%= link_to "Login", sign_in_path %>
      <%= link_to "Forgot your password?", new_user_password_path %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>
</div>